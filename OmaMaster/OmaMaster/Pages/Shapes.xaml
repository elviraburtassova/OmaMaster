<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmaMaster.Pages.Shapes">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" BackgroundColor="#F0CD66" Margin="20">
            <Image x:Name="figuresImage"/>
            <Label Text="О формах фигур:" Font="50" FontAttributes="Bold" TextColor="OrangeRed" HorizontalOptions="Center"/>
            <Label BackgroundColor="#FFEBB1" Text="Геометрическая фигура (от лат. figura) — термин, формально применимый к произвольному множеству точек." Font="40" TextColor="#F76405" HorizontalOptions="Center"/>
            <ImageButton Source="shapes.png" x:Name="For" Clicked="For_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>