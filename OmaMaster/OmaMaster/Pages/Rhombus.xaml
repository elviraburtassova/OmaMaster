<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmaMaster.Pages.Rhombus">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" BackgroundColor="#B2DFDB" Margin="20">
            <Label Text="Ромб:" Font="30" FontAttributes="Bold" TextColor="#00796B" HorizontalOptions="Center"/>
            <Label BackgroundColor="#80CBC4" Text="Ромб (лат. rombus, в буквальном переводе: «бубен») — это параллелограмм, у которого все стороны равны." Font="25" TextColor="#009688" HorizontalOptions="Center"/>
            <ImageButton Source="rom.png" x:Name="Romb" Clicked="Romb_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" WidthRequest="1000" HeightRequest="390" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>