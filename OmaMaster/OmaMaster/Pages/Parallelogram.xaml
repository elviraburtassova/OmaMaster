<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmaMaster.Pages.Parallelogram">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" BackgroundColor="#F2E2B2" Margin="20">
            <Label Text="Параллелограмм:" Font="50" FontAttributes="Bold" TextColor="#FFBE00" HorizontalOptions="Center"/>
            <Label BackgroundColor="#FFEBB1" Text="Параллелогра́мм — это четырёхугольник, у которого противоположные стороны попарно параллельны, то есть лежат на параллельных прямых. Частными случаями параллелограмма являются прямоугольник, квадрат и ромб." Font="40" TextColor="#F38602" HorizontalOptions="Center"/>
            <ImageButton Source="" x:Name="Par" Clicked="Par_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" WidthRequest="1000" HeightRequest="450" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>