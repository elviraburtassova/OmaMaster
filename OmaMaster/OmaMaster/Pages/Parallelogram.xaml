<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmaMaster.Pages.Parallelogram">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" BackgroundColor="#C5CAE9" Margin="20">
            <Label Text="Параллелограмм:" Font="33" FontAttributes="Bold" TextColor="#1A237E" HorizontalOptions="Center"/>
            <Label BackgroundColor="#9FA8DA" Text="Параллелогра́мм — это четырёхугольник, у которого противоположные стороны попарно параллельны, то есть лежат на параллельных прямых. Частными случаями параллелограмма являются прямоугольник, квадрат и ромб." Font="25" TextColor="#3F51B5" HorizontalOptions="Center"/>
            <ImageButton Source="par.jpg" x:Name="Par" Clicked="Par_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" WidthRequest="1000" HeightRequest="250" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>