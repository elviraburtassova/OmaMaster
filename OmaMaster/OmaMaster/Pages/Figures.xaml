<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmaMaster.Pages.Figures">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" BackgroundColor="LightPink" Margin="20">
            <Image x:Name="figuresImage"/>
            <Label Text="Проект о фигурах:" Font="45" FontAttributes="Bold" TextColor="#943126" HorizontalOptions="Center"/>
            <Label BackgroundColor="#F57085" Text="Данный проект создан для описания видов и формул для вычесления разных видов фигур." Font="30" TextColor="#922B21" HorizontalOptions="Center"/>
            <ImageButton Source="fig.jpg" x:Name="fig" Clicked="fig_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>