<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmaMaster.Pages.Triangle3">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" BackgroundColor="LightBlue" Margin="20">
            <Label Text="Равносторонний треугольник:" Font="25" FontAttributes="Bold" TextColor="#2196F3 " HorizontalOptions="Center"/>
            <Label BackgroundColor="#248EF6" Text="Правильный (равносторонний, или равноугольный) треугольник — это правильный многоугольник с тремя сторонами, простейший из правильных многоугольников. Все стороны правильного треугольника равны между собой, все углы также равны и составляют 60°. В равностороннем треугольнике высота является и биссектрисой, и медианой." Font="20" TextColor="Blue" HorizontalOptions="Center"/>
            <ImageButton Source="tr3.png" x:Name="Tr3" Clicked="Tr3_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" WidthRequest="1000" HeightRequest="250" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>